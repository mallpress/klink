{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build",
        "sourceMap": true,
        "target": "es2017",
        "lib": ["es2017", "es2015.iterable", "dom"],
        "watch": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "build",
        "tests"
    ],
    "include": [
        "src/**/*.ts"
    ]
}